<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/morocco_white">

    <LinearLayout
        android:id="@+id/zelligeBorder"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="@color/morocco_maroon"/>
        <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="@color/morocco_deep_green"/>
        <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="@color/morocco_gold"/>
        <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="@color/morocco_teal"/>
        <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="@color/morocco_maroon"/>
        <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:background="@color/morocco_deep_green"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/welcomeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgMosque"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_mosque_hassan"
            android:contentDescription="Hassan II Mosque"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tvWelcomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, El Houssaine!"
            android:textAlignment="center"
            android:textColor="@color/morocco_maroon"
            android:textSize="28sp"
            android:textStyle="bold"
            android:paddingHorizontal="32dp"
            android:fontFamily="sans-serif-medium"/>

        <View
            android:layout_width="60dp"
            android:layout_height="3dp"
            android:background="@color/morocco_gold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvGuidanceMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is your best guidance to enjoy your Moroccan trip."
            android:textAlignment="center"
            android:textColor="@color/morocco_deep_green"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginHorizontal="40dp"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartTrip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Start Exploring"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        android:backgroundTint="@color/morocco_brick_red"
        android:layout_margin="32dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>