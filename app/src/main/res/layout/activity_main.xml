<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top Search Bar with Modern Shadow -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"
                android:src="@android:drawable/ic_menu_search"
                android:tint="#757575" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search places in Morocco..."
                android:textColorHint="#9E9E9E"
                android:textColor="#212121"
                android:textSize="16sp"
                android:paddingVertical="8dp"
                android:inputType="text"
                android:imeOptions="actionSearch" />

            <ImageView
                android:id="@+id/filterIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="#757575"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Floating Action Buttons (Modern Style) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <!-- Current Location Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:contentDescription="My Location"
            android:src="@android:drawable/ic_menu_mylocation"
            app:tint="@android:color/white"
            app:backgroundTint="#2196F3"
            app:elevation="6dp"
            app:fabSize="normal" />

        <!-- List View Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:contentDescription="List View"
            android:src="@android:drawable/ic_menu_agenda"
            app:tint="@android:color/white"
            app:backgroundTint="#4CAF50"
            app:elevation="6dp"
            app:fabSize="normal" />

        <!-- Trip Planner Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabTripPlanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Trip Planner"
            android:src="@android:drawable/ic_menu_compass"
            app:tint="@android:color/white"
            app:backgroundTint="#FF9800"
            app:elevation="6dp"
            app:fabSize="normal" />

    </LinearLayout>

    <!-- Bottom Sheet for Place Details -->
    <include layout="@layout/bottom_sheet_place_preview" />

    <!-- Category Filter Chips (Hidden by default) -->
    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:scrollbars="none"
        android:visibility="gone">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoryChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="false"
            app:chipSpacing="8dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHistorical"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historical" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCultural"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cultural" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBeach"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coastal" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGarden"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garden" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipReligious"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Religious" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>