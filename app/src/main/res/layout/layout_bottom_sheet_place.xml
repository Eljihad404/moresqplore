<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_bottom_sheet_bg"
    android:padding="16dp">

    <!-- Handle bar for visual cue -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="#E0E0E0"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bsPlaceImage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/bsPlaceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place Name"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/bsPlaceRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="★ 4.5"
            android:textColor="#F59E0B"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="•"
            android:layout_marginEnd="8dp"
            android:textColor="#BDBDBD"/>

        <TextView
            android:id="@+id/bsPlaceCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historical"
            android:textColor="@color/morocco_blue"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/bsPlaceDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description of the place goes here."
        android:maxLines="3"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:layout_marginBottom="24dp"
        android:textColor="#616161"/>

    <!-- Route Info Section (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/routeInfoSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/morocco_cream"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_directions"
            app:tint="@color/morocco_deep_green"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRouteDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.2 km"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvRouteDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 mins"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnClearRoute"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Clear"
            android:textSize="12sp"
            android:backgroundTint="@color/text_secondary"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            style="?attr/materialButtonOutlinedStyle"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnGetDirections"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Get Directions"
        android:textStyle="bold"
        android:backgroundTint="@color/morocco_deep_green"
        android:textColor="@android:color/white"
        app:icon="@android:drawable/ic_menu_directions"
        app:iconTint="@color/white"
        app:cornerRadius="12dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnViewDetails"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="View Details"
        android:textStyle="bold"
        android:backgroundTint="@color/morocco_terracotta"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"/>

</LinearLayout>

