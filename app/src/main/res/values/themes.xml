<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ==================== OLD THEMES ==================== -->
    <!-- Base application theme -->
    <style name="Theme.MoresQplore" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/morocco_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/morocco_terracotta</item>
        <item name="colorSecondaryVariant">@color/morocco_sand</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="materialButtonStyle">@style/Widget.MoresQplore.Button</item>
    </style>

    <style name="Widget.MoresQplore.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- No Action Bar Theme for Landing Page -->
    <!-- No Action Bar Theme for Landing Page -->
    <style name="Theme.Moresqplore.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/morocco_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/morocco_terracotta</item>
        <item name="colorSecondaryVariant">@color/morocco_sand</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- ==================== ATLAS EXPLORER THEME ==================== -->
    <style name="Theme.AtlasExplorer" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/morocco_blue</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/morocco_sand</item>
        <item name="colorSecondaryVariant">@color/morocco_terracotta</item>

        <!-- On colors (text/icons on surfaces) -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/morocco_deep_green</item>
        <item name="android:navigationBarColor">@color/surface</item>

        <!-- Error color -->
        <item name="colorError">@color/morocco_brick_red</item>
    </style>

    <!-- ==================== TEXT APPEARANCES ==================== -->
    <style name="TextAppearance.AtlasExplorer.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AtlasExplorer.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AtlasExplorer.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AtlasExplorer.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextAppearance.AtlasExplorer.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- ==================== WIDGET STYLES ==================== -->

    <style name="Widget.AtlasExplorer.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeColor">@color/morocco_teal</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="checkedIconVisible">true</item>
    </style>

    <style name="Widget.AtlasExplorer.ChatUserBubble">
        <item name="android:background">@drawable/bg_chat_user_bubble</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Widget.AtlasExplorer.ChatAssistantBubble">
        <item name="android:background">@drawable/bg_chat_assistant_bubble</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Widget.AtlasExplorer.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.AtlasExplorer.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="Widget.AtlasExplorer.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/morocco_teal</item>
        <item name="titleTextColor">@color/white</item>
    </style>


    <!-- Base Widget AtlasExplorer style -->
    <style name="Widget.AtlasExplorer" parent="android:Widget" />

    <!-- Primary Button -->
    <style name="Widget.AtlasExplorer.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/morocco_teal</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Outlined Button -->
    <style name="Widget.AtlasExplorer.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/morocco_teal</item>
        <item name="strokeColor">@color/morocco_teal</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>