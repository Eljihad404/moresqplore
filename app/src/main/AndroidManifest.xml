<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Location Permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Internet Permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional: For better location accuracy -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Optional: For saving images from places -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Declare that the app uses location features -->
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />

    <queries>
        <package android:name="com.google.android.gms" />
        <package android:name="com.google.android.gsf" />
    </queries>

    <application
        android:name=".MoresQploreApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/moresqplore"
        android:label="@string/app_name"
        android:roundIcon="@drawable/moresqplore"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoresQplore"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Landing Activity (New Launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Moresqplore.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WelcomingActivity" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivityOSM"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity
            android:name=".ui.chat.ChatActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AtlasExplorer"
            android:parentActivityName=".MainActivityOSM">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivityOSM" />
        </activity>

        <!-- Place Details Activity (New) -->
        <activity
            android:name=".ui.details.PlaceDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Moresqplore.NoActionBar" />

        <!-- City Selection Activity -->
        <activity
            android:name=".SelectCityActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MoresQplore" />

        <!-- City Details Activity -->
        <activity
            android:name=".CityDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MoresQplore" />

        <!-- Legacy Chatbot Activity (redirects to ChatActivity) -->
        <activity
            android:name=".ChatbotActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AtlasExplorer" />


        <!-- Itinerary Activities -->
        <activity
            android:name=".ui.itinerary.ItineraryInputActivity"
            android:exported="false"
            android:theme="@style/Theme.MoresQplore"
            android:label="Plan Your Trip" />

        <activity
            android:name=".ui.itinerary.ItineraryResultActivity"
            android:exported="false"
            android:theme="@style/Theme.MoresQplore"
            android:label="Your Itinerary" />

        <!-- Price Comparison Activity -->
        <activity
            android:name=".ui.prices.PriceComparisonActivity"
            android:exported="false"
            android:theme="@style/Theme.MoresQplore"
            android:label="Compare Prices" />

        <!-- Guide Marketplace Activity -->
        <activity
            android:name=".ui.guides.GuideMarketplaceActivity"
            android:exported="false"
            android:theme="@style/Theme.MoresQplore"
            android:label="Local Guides" />

        <!-- Roadmap Activity (MapLibre) -->
        <activity
            android:name=".RoadmapActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Moresqplore.NoActionBar" />

        <!-- Budget Activities -->
        <activity
            android:name=".ui.budget.BudgetTrackerActivity"
            android:exported="false"
            android:theme="@style/Theme.Moresqplore.NoActionBar" />
        <activity
            android:name=".ui.budget.AddExpenseActivity"
            android:exported="false"
            android:theme="@style/Theme.Moresqplore.NoActionBar" />

    </application>

</manifest>